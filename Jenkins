pipeline {
    agent {
        dockerfile true
    }
    stages{
        stage('Checkout repository') {
            steps{
                  checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: 'prettyleka', url: 'https://github.com/prettyleka/Game.git']]])
                sh "ls -lart ./*"
        }
    }
        stage('Run App') {
            steps {
                sh 'python ./app.py'
        }
    }
        stage('Test with E2E') {
            steps {
                sh 'python ./tests/E2E.py'
            }
        }
    }
}
